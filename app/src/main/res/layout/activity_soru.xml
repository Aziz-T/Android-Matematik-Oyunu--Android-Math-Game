<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoruActivity">

    <TextView
        android:id="@+id/timerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:00"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="@color/temaRengim"
        />
    <TextView
        android:id="@+id/soruText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Hangi üç sayının toplamı eder?"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_below="@id/timerText"
        android:background="@drawable/cervelibutton"
        />
    <TextView
        android:id="@+id/sayiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/soruText"
        android:text="5"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@drawable/cervelibutton"
        />
    <TextView
        android:id="@+id/dogruYanlis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sayiText"
        android:gravity="center"
        android:padding="5dp"
        android:text="-"
        android:textSize="27sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_centerHorizontal="true"
        android:columnCount="4"
        android:layout_below="@id/dogruYanlis"
        android:layout_margin="5dp"
        android:rowCount="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1013"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:background="@drawable/cervelibutton"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1013"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:background="@drawable/cervelibutton"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/cervelibutton"
            android:text="1013"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1013"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:background="@drawable/cervelibutton"/>



        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1013"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:background="@drawable/cervelibutton"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1013"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:background="@drawable/cervelibutton"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/cervelibutton"
            android:text="1013"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1013"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:background="@drawable/cervelibutton"/>



    </GridLayout>
    <Button
        android:id="@+id/nextButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gecbuton"
        android:text="NEXT"
        android:textColor="#F44336"
        android:layout_margin="15dp"
        android:layout_below="@+id/grid"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/tryButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gecbuton"
        android:text="TRY AGAIN"
        android:textColor="#fff"
        android:backgroundTint="#4CAF50"
        android:layout_below="@+id/nextButton"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>